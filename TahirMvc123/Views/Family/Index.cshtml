@model IEnumerable<TahirMvc123.Models.Family>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-danger  btn-sm">Create New</a>
</p>
<table id="mytable" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cast)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cast.CastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-dark   btn-sm">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info   btn-sm">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
