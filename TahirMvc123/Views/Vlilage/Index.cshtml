@model IEnumerable<TahirMvc123.Models.Vlilage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

 
    <a asp-action="Create">Create New</a>
 
<table id="mytable" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VlilageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VlilageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VlilageId" class="btn btn-info btn-sm" >Edit</a> 
                <a asp-action="Details" asp-route-id="@item.VlilageId" class="btn btn-dark btn-sm" >Details</a> 
                <a asp-action="Delete" asp-route-id="@item.VlilageId"  class="btn btn-danger btn-sm" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
